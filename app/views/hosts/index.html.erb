<h1>Listing hosts</h1>

<table>
  <tr>
    <th>Hostname</th>
    <th>Ip</th>
    <th>Username</th>
    <th>Password</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @hosts.each do |host| %>
  <tr>
    <td><%= host.hostname %></td>
    <td><%= host.ip %></td>
    <td><%= host.username %></td>
    <td><%= host.password %></td>
    <td><%= link_to 'Show', host %></td>
    <td><%= link_to 'Edit', edit_host_path(host) %></td>
    <td><%= link_to 'Destroy', host, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

